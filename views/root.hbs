<body class="flex flex-col justify-center items-center h-screen bg-[url('https://images.unsplash.com/photo-1558591710-4b4a1ae0f04d?q=80&w=2787&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center">

  <h1 class="text-4xl mb-5">FilmRadar</h1>

  <div class="bg-white-300 backdrop-blur-sm p-8 rounded-lg shadow-md w-96">

    <p class="text-2xl font-bold mb-4 text-black text-center">Login</p>

    <form action="/" method="post" class="flex flex-col items-center space-y-4">
      <input
        type="text"
        name="username"
        id="username"
        placeholder="Username"
        required
        class="bg-transparent border border-white rounded-lg py-2 px-4 text-white w-full focus:outline-none focus:border-blue-800"
      />
      <div class="w-full relative">
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Password"
          required
          {{!-- pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$" --}}
          {{!-- title="Please fill out the password" --}}
          class="bg-transparent border border-white rounded-lg py-2 px-4 text-white w-full focus:outline-none focus:border-blue-800"
        />
        <i
          class="fa-solid fa-eye absolute right-5 top-3.5 cursor-pointer"
          id="eye"
        ></i>
      </div>
      <input
        type="submit"
        value="Login"
        class="bg-white border border-white rounded-lg py-2 px-4 w-full hover:cursor-pointer hover:bg-blue-400 hover:border-blue-400 hover:text-white"
      />
    </form>

    <a href="/signup" class="text-black text-center inline-block w-full">Don't have an account? <span class="text-blue-500">Sign Up!</span></a>
  </div>

  <script>
    document.getElementById('eye').addEventListener('click', function (e) {
    const password = document.getElementById('password'); const type =
    password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type); });
  </script>

</body>