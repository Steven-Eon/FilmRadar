<body class=" bg-slate-100">
    <div class="mx-2 my-2 flex flex-col">
        <div class="flex flex-row justify-between items-center">
            <div class="minw-20p maxw-40p">
                <h1 class="text-xl font-bold">Home Page</h1>
                <p class="text-xs ">Welcome to the chatroom! Join one below or create a new one above!</p>
            </div>
            <div class="minw-40p">
                <a href="/new" class="text-xs rounded-md border-2 border-blue-950 bg-blue-300 px-2 py-1 hover:bg-blue-800">New Room!</a>
            </div>
        </div>
        <hr class="my-2" />
        <div class="flex flex-col mx-4 my-4">
            <ul class="flex flex-col">
                {{#each roomId}}
                    <li class="flex flex-row justify-between content-center my-0.5">
                        <h2>{{roomId}}</h2>
                        <a href="/room/{{roomId}}" class="button px-0.5 py-0.5">Join!</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</body>


